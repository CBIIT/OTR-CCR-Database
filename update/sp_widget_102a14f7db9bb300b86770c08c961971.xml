		    gr.addQuery('contact_primary', input.sys_id);
				gr.query();
		while(gr.next()){
			var item = {};
			item.sys_id = gr.sys_id.toString();
			result.push(item);
		}
		data.projects = result;
	}
	
	
	
})();]]></script>
